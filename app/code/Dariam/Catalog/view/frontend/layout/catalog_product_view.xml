<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="content">
            <block class="Magento\Framework\View\Element\Template" name="dariam.demo.product"
                   template="Dariam_Catalog::demo_product.phtml" before="product.info.details"
            >
                <arguments>
                    <argument name="demo_product_message" translate="true" xsi:type="string">This is a demo product. You can add them to cart and place order only to test the Magento capabilities</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
