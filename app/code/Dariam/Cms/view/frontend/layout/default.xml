<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="header.container">
            <block class="Magento\Cms\Block\BlockByIdentifier" name="dariam.demo.message" before="-">
                <arguments>
                    <argument name="identifier" xsi:type="string">demo_message</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="dariam.sidebar.profile">
            <block class="Magento\Cms\Block\BlockByIdentifier" name="dariam.creator.profile">
                <arguments>
                    <argument name="identifier" xsi:type="string">creator_profile</argument>
                </arguments>
            </block>
        </referenceContainer>
    </body>
</page>
