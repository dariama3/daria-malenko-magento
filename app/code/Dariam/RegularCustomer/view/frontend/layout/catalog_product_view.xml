<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceContainer name="product.info.main">
            <container name="dariam.regular.customer.request.container">
                <block class="Magento\Cms\Block\Block" name="dariam.regular.customer.message">
                    <arguments>
                        <argument name="block_id" xsi:type="string">regular_customer_request_message</argument>
                    </arguments>
                </block>
                <block class="Dariam\RegularCustomer\Block\Product\View\RegularCustomerRequest"
                       name="dariam.regular.customer.request"
                       template="Dariam_RegularCustomer::catalog/product/view/regular_customer/form.phtml"
                       before="product.info.details"
                >
                    <arguments>
                        <argument name="cache_lifetime" xsi:type="number">84600</argument>
                        <argument name="jsLayout" xsi:type="array">
                            <!-- Choose either `updater` or `xsi:type="helper"` -->
                            <!-- "updater" can also be used with any argument, not just a jsLayout -->
                            <updater>Dariam\RegularCustomer\Model\CurrentProductIdUpdater</updater>
                            <item name="components" xsi:type="array">
                                <item name="regularCustomerRequest" xsi:type="array">
                                    <item name="component" xsi:type="string">uiCollection</item>
                                    <item name="children" xsi:type="array">
                                        <item name="regularCustomerRequestForm" xsi:type="array">
                                            <item name="component" xsi:type="string">Dariam_RegularCustomer_form</item>
                                            <item name="displayArea" xsi:type="string">dariam-regularCustomer-form</item>
                                            <item name="config" xsi:type="array">
                                                <item name="action"
                                                      xsi:type="url"
                                                      path="regular-customer/index/request"
                                                />
                                                <!-- Choose either `updater` or `xsi:type="helper"` -->
                                                <item name="productId" xsi:type="number">0</item>
                                                <!-- <item name="productId" xsi:type="helper" -->
                                                      <!-- helper="Dariam\RegularCustomer\Helper\CurrentProduct::getCurrentProductId" -->
                                                <!--  /> -->
                                                <item name="isModal" xsi:type="string">true</item>
                                            </item>
                                        </item>
                                        <item name="regularCustomerRequestButton" xsi:type="array">
                                            <item name="component" xsi:type="string">Dariam_RegularCustomer_formOpenButton</item>
                                            <item name="displayArea" xsi:type="string">dariam-regularCustomer-formOpenButton</item>
                                        </item>
                                    </item>
                                </item>
                            </item>
                        </argument>
                    </arguments>
                    <container name="dariam.regular.customer.form.extras"/>
                </block>
            </container>
        </referenceContainer>
    </body>
</page>
