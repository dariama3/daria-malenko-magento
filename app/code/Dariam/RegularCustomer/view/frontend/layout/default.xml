<?xml version="1.0"?>
<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd"
>
    <body>
        <referenceBlock name="top.links">
            <block class="Dariam\RegularCustomer\Block\Link" name="regular-customer-list-link">
                <arguments>
                    <argument name="sortOrder" xsi:type="number">50</argument>
                </arguments>
            </block>
        </referenceBlock>

        <referenceBlock name="footer_links">
            <block class="Magento\Framework\View\Element\Html\Link" name="regular-customer-form-link">
                <arguments>
                    <argument name="label" xsi:type="string" translate="true">Loyalty program</argument>
                    <argument name="path" xsi:type="string">regular-customer/request/form</argument>
                </arguments>
            </block>
        </referenceBlock>
    </body>
</page>
